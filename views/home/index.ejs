<div class="container-fluid">
  <div class="row">
    <div class="col-lg-offset-2 col-lg-3">
      <h2>Sign Up</h2>
      <form action="/user/create" role="form" method="post">
        <div class="form-group">
          <label>Username</label>
          <input type="text" class="form-control" name="username" placeholder="Username">
        </div>
        <div class="form-group">
          <label>Email address</label>
          <input type="email" class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <div class="form-group">
          <label>Repeat password</label>
          <input type="password" class="form-control" name="password_conf" placeholder="Repeat password">
        </div>
        <button type="submit" class="btn btn-default">Sign Up</button>
      </form><!-- sign up form -->  
    </div>
    
    <div class="col-lg-offset-2 col-lg-3">
      <h2>Sign In</h2>
      <form action="/user/login" method="post" class="form" role="form">
        <div class="form-group">
          <label class="control-label">Email</label>
          <input type="email" class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group">
          <label class="control-label">Password</label>
          <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-default">Sign In</button>
      </form><!-- sign in in form -->
    </div>
  </div>
</div>